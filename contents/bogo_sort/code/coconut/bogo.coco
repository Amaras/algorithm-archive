import random


def is_sorted(a):
    for x, y in zip(a, a[1:]):
        if x > y:
            return False
    return True


def bogo_sort(a):
    while not is_sorted(a):
        random.shuffle(a)


if __name__ == '__main__':
    a = [1, 3, 2, 4]
    print('Unsorted:', a)
    bogo_sort(a)
    print('Sorted:', a)
